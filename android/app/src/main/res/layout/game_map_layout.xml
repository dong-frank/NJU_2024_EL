<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.wheretogo.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/user_guess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="text"
            tools:ignore="LabelFor" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/system_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="hello">
        <EditText
            android:id="@+id/panodemo_main_input_city"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:hint="城市"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="text" />
        <EditText
            android:id="@+id/panodemo_main_input_address"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/panodemo_main_input_city"
            android:maxLines="2"
            android:hint="地址"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/panodemo_main_input_address"
            android:text="去那儿!" />

        <TextView
            android:id="@+id/introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/panodemo_main_input_city"
            android:textColor="#000000"
            android:textSize="30sp"
            android:text="Where To Go!"
            />
        <com.baidu.lbsapi.panoramaview.PanoramaView
            android:id="@+id/panorama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/introduce"
            android:contentDescription="这是一个全景图片"
            />
        <ListView
            android:id="@+id/sugsearchlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/panodemo_main_input_address"
            android:background="@color/white"
            android:visibility="gone"
            />
    </RelativeLayout>


</LinearLayout>